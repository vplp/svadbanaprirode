<?xml version="1.0" encoding="UTF-8"?>
    <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"> 
        <url>
            <loc>{{host}}</loc>
        </url>
        <url>
            <loc>{{host}}/catalog/</loc>
        </url>

        {% for slice in slices %}
        	<url>
	            <loc>{{host}}/catalog/{{slice.alias}}/</loc>
	        </url>
        {% endfor %}

        <url>
            <loc>{{host}}/privacy/</loc>
        </url>

        {% for item in items %}
        	<url>
	            <loc>{{host}}/catalog/{{item.id}}/</loc>
	        </url>
        {% endfor %}
        
    </urlset>